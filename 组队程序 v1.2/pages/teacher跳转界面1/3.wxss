.container {
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.form {
  background-color: #f9f9f9;
  padding: 20px;
  border-radius: 8px;
}

.form-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.label {
  width: 90px;
}

.input {
  flex-grow: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit-button {
  background-color: #1aad19;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
  margin-top: 20px;
  width: 100%;
}