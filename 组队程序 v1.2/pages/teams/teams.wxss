/* 通用样式 */
.container {
  padding: 20px;
}

.header {
  margin-bottom: 20px;
  text-align: center;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.team-list {
  margin-top: 20px;
}

.team-member {
  display: flex;
  align-items: center;
  padding: 15px 0;
  border-bottom: 1px solid #ddd;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 15px;
}

.name {
  font-size: 18px;
  flex: 1;
}

.role {
  font-size: 16px;
  color: #888;
}
